<p id="notice"><%= notice %></p>

<h1>Genres</h1>
<% if Array(User.where(:id => session[:user_id])).first.id == 6 %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Subgenres', {:controller => "subgenres", :action => "index", :genre => genre.id } %></td>
        <td><%= link_to 'Add Subgenre', {:controller => "subgenres", :action => "new", :genre=> genre.id} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= link_to 'New Genre', new_genre_path %><br/><br/>
<%= link_to 'Back', admin_url %>


<% else %>
  <% @genres.each do |genre| %>
   <%= link_to genre.name, {:controller => "subgenres", :action => "index", :genre => genre.id} %>
   <br/><br/>
  <% end %>
  <%= link_to 'Back', {:controller => "player", :action => "index"} %>
<% end %>
