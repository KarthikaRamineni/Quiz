<p id="notice"><%= notice %></p>

<h1>Leaderboard</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Genre</th>
      <th>Subgenre</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Array(@leaderboards).each do |leaderboard| %>
      <tr>
        <td><%= leaderboard.user.email %></td>
        <td><%= leaderboard.genre.name %></td>
        <td><%= leaderboard.subgenre.name %></td>
        <td><%= leaderboard.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if Array(User.where(:id => session[:user_id])).first.id != 6 %>
<%= link_to "Home", player_index_path %>
<% else %>
<%= link_to "Back", admin_index_path %>
<% end %>
<br>
